          "name": "connectionName",
          "displayName": "Connection Name",
          "inputType": "string",
          "defaultValue": "EMAIL_CONNECTION_1",
          "required": "true",
          "helpTip": "The name for the email connection",
          "validation": "nameWithoutSpecialCharactors"
        }
      },
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "General",
        "elements": [
          {
            "type": "attributeGroup",
            "value": {
              "groupName": "Connection Details",
              "elements": [
                {
                  "type": "attribute",
                  "value": {
                    "name": "host",
                    "displayName": "Host",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "true",
                    "helpTip": "Host name of the mail server"
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "port",
                    "displayName": "Port",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "true",
                    "helpTip": "The port number of the mail server"
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "username",
                    "displayName": "Username",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "true",
                    "helpTip": "Username used to connect with the mail server"
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "password",
                    "displayName": "Password",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "true",
                    "helpTip": "Password to connect with the mail server",
                    "isSensitive": "true"
                  }
                },
                {
                    "type": "attribute",
                    "value": {
                        "name": "name",
                        "displayName": "Connection Name",
                        "inputType": "string",
                        "defaultValue": "",
